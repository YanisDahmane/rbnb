<%= simple_form_for @room do |f| %>
  <%= f.input :name, placeholder: "Dr Quinn's Office" %>
  <%= f.input :size, placeholder: "0 m²" %>
  <%= f.association :category %>
  <%= f.input :description, placeholder: "Equipment, accessibility, specificities ..." %>
  <%= f.fields_for :address do |fa| %>
    <%= fa.input :number, placeholder: "9 3/4" %>
    <%= fa.input :road, placeholder: "Abbey Road" %>
    <%= fa.input :city, placeholder: "Sydney" %>
    <%= fa.input :country, as: :string, placeholder: "Japan" %>
    <%= fa.input :zip_code, placeholder: "#####" %>
  <% end %>
  <%= f.input :price, placeholder: "~ €" %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
