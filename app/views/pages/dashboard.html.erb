<div class="container">

  <div class="dashboard-container">
    <h2>Mes locaux</h2>
    <div class="card-deck" style="display:flex">
      <% @rooms.each do |room| %>
        <%= render "dashboard_room", room: room %>
      <% end %>
    </div>
  </div>

  <div class="dashboard-container">
    <h2>Mes réservations</h2>
    <div class="card-deck" style="display:flex">
      <% @bookings_request.each do |book| %>
        <%= render "booking_request", book: book %>
      <% end %>
    </div>
  </div>​

  <div class="dashboard-container">
    <h2>Mes demandes de location</h2>
    <div class="card-deck">
      <% @bookings.each do |book| %>
        <%= render "booking", book: book %>
      <% end %>
    </div>
  </div>

</div>​
