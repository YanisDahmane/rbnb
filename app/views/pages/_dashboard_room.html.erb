 <%= link_to room_path(room) do%>
  <div class="card-room">
  <img class="card-img-top" src="<%= room.photo.attached? ? cl_image_path(room.photo.key, height: 300, width: 400, crop: :fill) : asset_path('cabinet-medical.webp')%>" alt="">
    <div class="card-room-infos">
      <div>
      <h5 class="card-title"><%= room.name %></h5>
        <p><%= room.description %></p>
      </div>
      <h2 class="card-room-pricing"><%= room.price %>€/jour</h2>

      <%= link_to room_path(room), class:"btn  delete-btn",
              data: {turbo_method: :delete, turbo_confirm: "Etes-vous certains de vouloir retirer cette incroyable expérience?"} do %>
              <i class="fa-solid fa-skull-crossbones"></i>
            <% end %>

    </div>
  </div>
<%end%>
